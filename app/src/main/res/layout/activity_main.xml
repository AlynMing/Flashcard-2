<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#000033"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/flashcard_ans1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="255dp"
        android:text="Bill Clinton"
        android:gravity="center"
        android:textSize="38sp"
        android:textColor="#ffffff"
        android:background="@drawable/ans_background"
        android:elevation="8dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/flashcard_ans2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="355dp"
        android:text="George H.W. Bush"
        android:gravity="center"
        android:textSize="38sp"
        android:textColor="#ffffff"
        android:background="@drawable/ans_background"
        android:elevation="8dp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:id="@+id/flashcard_ans3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="455dp"
        android:background="@drawable/ans_background"
        android:elevation="8dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#ffffff"
        android:textSize="38sp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:id="@+id/flashcard_ans3copy"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ans_background"
        android:visibility="invisible"
        android:elevation="8dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_marginHorizontal="10dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/toggle_choices_visibility"
        android:src="@drawable/ic_iconmonstr_eye_5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/addBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_iconmonstr_plus_6"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/nextBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_iconmonstr_next"
        android:layout_alignParentRight="true"
        android:layout_marginTop="195dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>